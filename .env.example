# Database Configuration
DATABASE_URL=postgresql://vectoruser:vectorpass@localhost:5432/vectory

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# MinIO/S3 Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=vectory-uploads
MINIO_SECURE=false

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-me-min-32-characters
JWT_REFRESH_SECRET=your-refresh-secret-key-change-me-min-32-characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Embedding Provider API Keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
COHERE_API_KEY=...

# Default Settings
DEFAULT_EMBEDDING_MODEL=text-embedding-3-small
DEFAULT_DIMENSION=1536
DEFAULT_DISTANCE_METRIC=cosine

# API Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
RATE_LIMIT_PER_MINUTE=100
MAX_UPLOAD_SIZE_MB=100

# Frontend Configuration
# Docker image must be rebuilt after changing this value.
NEXT_PUBLIC_API_URL=http://localhost:8000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Performance
VECTOR_BATCH_SIZE=1000
MAX_WORKERS=4
POOL_SIZE=20
